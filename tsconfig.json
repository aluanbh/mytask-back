{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "@/*":["*"],
      "@/tests/*":["../tests/*"],
    },
    "strict": true
  },
  "include": ["src", "tests", ".d.ts"]
 }
 